<div class="container px-5" style="padding-top: 1rem;">
    <h3 class="fw-bolder">
        <%= courseName %>
    </h3>
    <h5 style="padding-top: 1rem; padding-bottom: 2rem;">Here you can find all the modules for the selected course, please follow the order of the presented modules for a better experience!</h5>
    <div class="row gx-5">

        <% modules.forEach(function (module) { %>
            <div class="col-lg-4 mb-5" id="moduleId_<%= module.module_id %>">
                <div class="card h-100 shadow border-0" onclick=callActivities(event)>
                    <img class="card-img-top" src="<%= module.image_path %>" alt="..." />
                    <div class="card-body p-4">
                        <a class="text-decoration-none link-dark stretched-link" href="#!">
                            <div class="h5 card-title mb-3">
                                <%= module.name %> <% if(module.user_id != null){ %><i class="fa fa-trophy fa-lg"></i><% } %>
                            </div>
                        </a>
                        <p class="card-text mb-0">
                            <%= module.description %>
                        </p>
                    </div>
                </div>
            </div>
            <% }) %>

    </div>
</div>