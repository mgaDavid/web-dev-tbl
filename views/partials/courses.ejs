<div class="container px-5" style="padding-top: 1rem;">
    <h3 class="fw-bolder">My courses</h3>
    <h5 style="padding-top: 1rem; padding-bottom: 2rem;">Here you can find all the courses available that you can enroll and enjoy!</h5>
    <div class="row gx-5" id>

        <% courses.forEach(function (course) { %>
            <div class="col-lg-4 mb-5" id="courseId_<%= course.course_id %>">
                <div class="card h-100 shadow border-0" onclick=callModules(event)>
                    <img class="card-img-top" src="<%= course.image_path %>" alt="..." />
                    <div class="card-body p-4">
                        <a class="text-decoration-none link-dark stretched-link" href="#!">
                            <div class="h5 card-title mb-3">
                                <%= course.name %>
                            </div>
                        </a>
                        <p class="card-text mb-0">
                            <%= course.description %>
                        </p>
                    </div>
                </div>
            </div>
            <% }) %>

    </div>
</div>